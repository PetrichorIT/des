include NetworkNode

network Main {

    nodes:
        node1: NetworkNode
        node2: NetworkNode
        node3: NetworkNode

        node[1...100]: NetworkNode

    connections:
        node1/channelOutgoing --> FastLink --> node2/channelIncoming
        node2/channelOutgoing --> FastLink --> node3/channelIncoming
        node3/channelOutgoing --> FastLink --> node1/channelIncoming

        node[1]/channelOutgoing --> node[2]/channelIncoming
}